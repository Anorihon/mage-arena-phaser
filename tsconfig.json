{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "node_modules/phaser3-rex-plugins-types"
  ],
  "exclude": ["node_modules"],
  "typeRoots": [
    "node_modules/@types",
    "node_modules/phaser/types",
    "node_modules/phaser3-rex-plugins-types"
  ],
  "types": [
    "Phaser"
  ]
}
